{
  "name": "adonisjs-mongoose",
  "version": "0.0.5",
  "description": "Mongoose provider for AdonisJS 6 with multi-connection support",
  "main": "./build/index.js",
  "type": "module",
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "!index.ts",
    "!build/test",
    "!build/test-helpers",
    "!build/*.tsbuildinfo"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.28.0",
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/main.js",
    "./database": "./build/src/database/main.js",
    "./services/main": "./build/services/mongoose_service.js",
    "./providers/mongoose_provider": "./build/providers/mongoose_provider.js"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --fix --cache",
    "pretest": "pnpm run build",
    "test": "node --loader=ts-node/esm --test",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "check-types": "tsc --noEmit",
    "prebuild": "pnpm run clean",
    "build": "tsc",
    "postbuild": "pnpm run copy:templates",
    "dev": "tsc --watch",
    "clean": "del-cli build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "adonisjs",
    "mongoose",
    "mongodb",
    "odm",
    "database"
  ],
  "author": "Najmus Sakib <nazmusakib412@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/sakib412/adonisjs-mongoose#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sakib412/adonisjs-mongoose.git"
  },
  "bugs": {
    "url": "https://github.com/sakib412/adonisjs-mongoose/issues"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.19.3",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@swc/core": "^1.15.8",
    "@types/node": "^24",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@poppinss/macroable": "^1.1.0",
    "@poppinss/utils": "^6.10.1"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.19.3",
    "mongoose": "^9.1.3"
  },
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "prettier": "@adonisjs/prettier-config"
}
