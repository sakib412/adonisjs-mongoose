# Example environment variables for MongoDB

# Default connection name
DEFAULT_MONGODB_CONNECTION=mongodb

# MongoDB connection URI (takes precedence over individual options)
MONGODB_URI=

# Individual MongoDB connection options
MONGODB_HOST=127.0.0.1
MONGODB_PORT=27017
MONGODB_DATABASE=adonis
MONGODB_USER=
MONGODB_PASSWORD=

# Example: Secondary connection
# MONGODB_SECONDARY_URI=mongodb://localhost:27017/secondary_db
