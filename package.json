{
  "name": "adonisjs-mongoose",
  "version": "0.0.1",
  "description": "Mongoose provider for AdonisJS 6 with multi-connection support",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/test",
    "!build/test-helpers"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "packageManager": "pnpm@10.28.0",
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types/main.js",
    "./database": "./build/src/database/main.js",
    "./services/main": "./build/services/mongoose_service.js"
  },
  "scripts": {
    "pretest": "pnpm run build",
    "test": "node --loader=ts-node/esm --test",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "prebuild": "pnpm run clean",
    "build": "tsc",
    "postbuild": "pnpm run copy:templates",
    "release": "np --message=\"chore(release): %s\"",
    "version": "pnpm run build",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "adonisjs",
    "mongoose",
    "mongodb",
    "odm",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/sakib412/adonisjs-mongoose#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sakib412/adonisjs-mongoose.git"
  },
  "bugs": {
    "url": "https://github.com/sakib412/adonisjs-mongoose/issues"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.15.1",
    "@adonisjs/eslint-config": "^2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@types/node": "^22.10.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "np": "^10.0.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@poppinss/macroable": "^1.0.2",
    "@poppinss/utils": "^6.8.3",
    "mongoose": "^8.9.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.19.3"
  },
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "beta",
    "branch": "main",
    "anyBranch": false
  },
  "prettier": "@adonisjs/prettier-config"
}